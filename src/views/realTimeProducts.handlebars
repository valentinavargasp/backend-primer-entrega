<h1>Real-Time Products</h1>

<h2>Lista de Productos</h2>
<ul id="productsList">
    {{#each products}}
    <li>
        {{this.title}} - {{this.price}}
        <button class="delete-button" data-id="{{this.id}}">Eliminar</button>
    </li>
    {{/each}}
</ul>

<h2>Agregar Producto</h2>
<form id="productForm">
    <input type="text" id="title" placeholder="Title" required />
    <input type="text" id="description" placeholder="Description" required />
    <input type="text" id="price" placeholder="Price" required />
    <input type="text" id="code" placeholder="Code" required />
    <input type="text" id="stock" placeholder="Stock" required />
    <input type="text" id="category" placeholder="Category" required />
    <input type="text" id="thumbnails" placeholder="Thumbnail URL" required />
    <button type="submit">Agregar producto</button>
</form>

<script src="/js/main.js"></script>
